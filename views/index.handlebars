	<div class="container">
        <div class="items-div">
        <!-- Loop through items collection and display all items here -->
          <ul>
            {{#each items}}
            
              <li class="item" data-id="{{this._id}}">
                <a data-id="{{this._id}}" href="{{this.link}}" target="_blank">
                    <h2 data-id="{{this._id}}">
                      {{this.title}}
                  	</h2>
                    <img class="responsive-img list-image" src="{{this.image}}">
                </a>
                  <!-- Save fave button uses POST request to set value of item.saved to true -->
                  <form action="/favorites/{{this.id}}" method="POST">
                    <input type="hidden" name="saved" value="true">
                    <button type="submit" href="#fave-alert" data-id="{{this._id}}">
                        <i class="fa fa-heart fa-lg save-fave" aria-hidden="true"></i>
                    </button>
                  </form>
              </li>

        		{{/each}}
      		</ul>
        </div>
      </div>
    </div>